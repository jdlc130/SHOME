<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SHOME.Pages.LockPage">
  <StackLayout Orientation="Vertical" VerticalOptions="Center">
	<Image Source="header_lock.png" />
    <Switch x:Name="mySwitch" HorizontalOptions="Center"/>
    <Label x:Name="txtResult" Text="{Binding IsToggled,Source={x:Reference mySwitch}}" HorizontalOptions="Center" FontSize="50" />
  </StackLayout>
</ContentPage>