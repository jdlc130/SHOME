<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SHOME.EventMenuPage"
            BackgroundColor="White">

  <StackLayout BackgroundColor = "White"
               VerticalOptions= "Center">

    <Button x:Name="btnCreateEvent" Text="Criar Evento" TextColor="Black" Clicked="OnCreate"></Button>
    <Button x:Name="btnListEvent" Text="Lista de Eventos" TextColor="Black" Clicked="OnList" ></Button>
    <Button x:Name="btnListRoutine" Text="Lista de Rotinas" TextColor="Black"></Button>
    <Button x:Name="btnWeather" Text="Meteorologia" TextColor="Black" Clicked="OnMeteo"></Button>
  </StackLayout>

</ContentPage>